rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is CEO
    function isCEO() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ceo';
    }
    
    // Helper function to check if user is HR
    function isHR() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'hr';
    }
    
    // Helper function to check if user has admin privileges (CEO or HR)
    function isAdmin() {
      return isCEO() || isHR();
    }
    
    // Users collection rules
    match /users/{userId} {
      // Allow read for:
      // 1. The user themselves
      // 2. CEO (can read all users)
      // 3. HR (can read all users)
      allow read: if request.auth != null && 
                     (request.auth.uid == userId || isAdmin());
      
      // Allow write for:
      // 1. The user themselves (for updating their own profile)
      // 2. CEO (can manage all users)
      // 3. Unauthenticated users (can create profile during invitation signup)
      allow write: if (request.auth != null && 
                       (request.auth.uid == userId || isCEO())) ||
                      (request.auth == null && 
                       request.resource.data.keys().hasAll(['userName', 'email', 'role', 'designation']));
      
      // Attendance subcollection
      match /attendance/{attendanceId} {
        // Allow read for:
        // 1. The user themselves
        // 2. CEO and HR (can view all attendance)
        allow read: if request.auth != null && 
                       (request.auth.uid == userId || isAdmin());
        
        // Allow write for:
        // 1. The user themselves (for recording their own attendance)
        // 2. CEO (can modify any attendance record)
        allow write: if request.auth != null && 
                        (request.auth.uid == userId || isCEO());
      }
      
      // Vacation requests subcollection
      match /vacationRequests/{requestId} {
        // Allow read for:
        // 1. The user themselves
        // 2. CEO and HR (can view all requests)
        allow read: if request.auth != null && 
                       (request.auth.uid == userId || isAdmin());
        
        // Allow write for:
        // 1. The user themselves (for creating/updating their own requests)
        // 2. CEO and HR (can approve/reject requests)
        allow write: if request.auth != null && 
                        (request.auth.uid == userId || isAdmin());
      }
      
      // Home office requests subcollection
      match /homeOfficeRequests/{requestId} {
        // Allow read for:
        // 1. The user themselves
        // 2. CEO and HR (can view all requests)
        allow read: if request.auth != null && 
                       (request.auth.uid == userId || isAdmin());
        
        // Allow write for:
        // 1. The user themselves (for creating/updating their own requests)
        // 2. CEO and HR (can approve/reject requests)
        allow write: if request.auth != null && 
                        (request.auth.uid == userId || isAdmin());
      }
      
      // Sick leave requests subcollection
      match /sickLeaveRequests/{requestId} {
        // Allow read for:
        // 1. The user themselves
        // 2. CEO and HR (can view all requests)
        allow read: if request.auth != null && 
                       (request.auth.uid == userId || isAdmin());
        
        // Allow write for:
        // 1. The user themselves (for creating/updating their own requests)
        // 2. CEO and HR (can approve/reject requests)
        allow write: if request.auth != null && 
                        (request.auth.uid == userId || isAdmin());
      }
      
      // Approved home office subcollection
      match /approvedHomeOffice/{dateId} {
        // Allow read for:
        // 1. The user themselves
        // 2. CEO and HR (can view all approved home office days)
        allow read: if request.auth != null && 
                       (request.auth.uid == userId || isAdmin());
        
        // Allow write for:
        // 1. CEO and HR (can approve home office requests)
        allow write: if request.auth != null && isAdmin();
      }
    }
    
    // Vacation requests collection (global)
    match /vacationRequests/{requestId} {
      // Allow read for:
      // 1. The request owner
      // 2. CEO and HR (can view all requests)
      allow read: if request.auth != null && 
                     (request.auth.uid == resource.data.userId || isAdmin());
      
      // Allow write for:
      // 1. The request owner (create/update must keep same owner)
      // 2. CEO and HR (can approve/reject requests)
      allow write: if request.auth != null && (
                      isAdmin() ||
                      (
                        request.resource.data.userId == request.auth.uid &&
                        (resource == null || resource.data.userId == request.auth.uid)
                      )
                    );
    }
    
    // Home office requests collection (global)
    match /homeOfficeRequests/{requestId} {
      // Allow read for:
      // 1. The request owner
      // 2. CEO and HR (can view all requests)
      allow read: if request.auth != null && 
                     (request.auth.uid == resource.data.userId || isAdmin());
      
      // Allow write for:
      // 1. The request owner (create/update must keep same owner)
      // 2. CEO and HR (can approve/reject requests)
      allow write: if request.auth != null && (
                      isAdmin() ||
                      (
                        request.resource.data.userId == request.auth.uid &&
                        (resource == null || resource.data.userId == request.auth.uid)
                      )
                    );
    }
    
    // Sick leave requests collection (global)
    match /sickLeaveRequests/{requestId} {
      // Allow read for:
      // 1. The request owner
      // 2. CEO and HR (can view all requests)
      allow read: if request.auth != null && 
                     (request.auth.uid == resource.data.userId || isAdmin());
      
      // Allow write for:
      // 1. The request owner (create/update must keep same owner)
      // 2. CEO and HR (can approve/reject requests)
      allow write: if request.auth != null && (
                      isAdmin() ||
                      (
                        request.resource.data.userId == request.auth.uid &&
                        (resource == null || resource.data.userId == request.auth.uid)
                      )
                    );
    }
    
    // Employee Invitations collection
    match /employeeInvitations/{invitationId} {
      // Allow read for:
      // 1. CEO and HR (can view all invitations)
      // 2. Unauthenticated users (for invitation validation during signup)
      // 3. Newly authenticated invitee validating their own invite
      allow read: if request.auth == null ||
                     (request.auth != null && isAdmin()) ||
                     (request.auth != null &&
                      resource.data.email == request.auth.token.email);
      
      // Allow write for:
      // 1. CEO and HR (can create and manage invitations)
      // 2. Unauthenticated users (can update invitation status to 'accepted')
      // 3. Newly authenticated invitee (email must match invite email)
      allow write: if (request.auth == null &&
                       resource.data.status == 'pending' &&
                       request.resource.data.status == 'accepted') ||
                      (request.auth != null && isAdmin()) ||
                      (request.auth != null &&
                       resource.data.status == 'pending' &&
                       resource.data.email == request.auth.token.email &&
                       request.resource.data.status == 'accepted');
    }
    
    // Announcements collection
    match /announcements/{announcementId} {
      // Allow read for all authenticated users
      allow read: if request.auth != null;
      
      // Allow create for:
      // 1. CEO (can create all types of announcements)
      // 2. HR (can create employee announcements)
      // 3. Employees (can create employee announcements)
      allow create: if request.auth != null && 
                      (isCEO() || 
                       (isHR() && request.resource.data.type == 'employee') ||
                       (!isAdmin() && request.resource.data.type == 'employee'));
      
      // Allow update for:
      // 1. The author of the announcement (can edit/delete their own posts)
      // 2. CEO and HR (can delete any post for moderation)
      allow update: if request.auth != null && 
                      (resource.data.userId == request.auth.uid || isAdmin());
      
      // Allow delete for:
      // 1. The author of the announcement
      // 2. CEO and HR (can delete any post for moderation)
      allow delete: if request.auth != null && 
                      (resource.data.userId == request.auth.uid || isAdmin());
      
      // Comments subcollection
      match /comments/{commentId} {
        // Allow read for all authenticated users
        allow read: if request.auth != null;
        
        // Allow create for all authenticated users
        allow create: if request.auth != null;
        
        // Allow update for:
        // 1. The author of the comment (can edit their own comments)
        // 2. CEO and HR (can delete any comment for moderation)
        allow update: if request.auth != null && 
                        (resource.data.userId == request.auth.uid || isAdmin());
        
        // Allow delete for:
        // 1. The author of the comment
        // 2. CEO and HR (can delete any comment for moderation)
        allow delete: if request.auth != null && 
                        (resource.data.userId == request.auth.uid || isAdmin());
      }
    }
    
    // Default rule - deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
